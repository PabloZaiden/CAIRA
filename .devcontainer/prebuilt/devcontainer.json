{
  "name": "CAIRA-prebuilt",
  "image": "ghcr.io/microsoft/caira-prebuilt-devcontainer:latest",
  "features": {},
  "onCreateCommand": {
    "chown-local": "sudo chown -R $(id -un):$(id -gn) $HOME/.local"
  },
  "postCreateCommand": {
    "git-safe-dir": "git config --global --add safe.directory ${containerWorkspaceFolder}"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=${containerWorkspaceFolder},type=bind,consistency=cached",
  "workspaceFolder": "/workspace",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "remoteUser": "vscode",
  "forwardPorts": [
    8000
  ],
  "portsAttributes": {
    "8000": {
      "label": "mkdocs serve",
      "onAutoForward": "notify"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.defaultProfile.osx": "zsh",
        "powershell.powerShellAdditionalExePaths": {
          "pwsh": "/usr/bin/pwsh"
        },
        "powershell.powerShellDefaultVersion": "pwsh"
      },
      "extensions": [
        "eamodio.gitlens",
        "ms-azuretools.vscode-azureterraform",
        "ms-vscode.powershell",
        "ms-vscode.azurecli",
        "hashicorp.terraform",
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-azuretools.vscode-docker",
        "bierner.github-markdown-preview",
        "task.vscode-task",
        "editorconfig.editorconfig",
        "davidanson.vscode-markdownlint",
        "redhat.vscode-yaml",
        "fnando.linter",
        "github.copilot",
        "github.copilot-chat",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "github.codespaces",
        "github.remotehub",
        "aaron-bond.better-comments",
        "usernamehw.errorlens",
        "ms-sarifvscode.sarif-viewer",
        "yzhang.markdown-all-in-one",
        "timonwong.shellcheck",
        "streetsidesoftware.code-spell-checker",
        "hashicorp.hcl",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
